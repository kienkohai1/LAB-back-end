@model List<User>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-users"></i> Danh sách người dùng</h2>
                <a href="/User/Add" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Thêm mới
                </a>
            </div>

            @if (Model != null && Model.Count > 0)
            {
                <div class="card shadow">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Mã sinh viên</th>
                                        <th>Tài khoản</th>
                                        <th>Email</th>
                                        <th>Điện thoại</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td><span class="badge badge-secondary">@user.id</span></td>
                                            <td><strong>@user.username</strong></td>
                                            <td>@user.email</td>
                                            <td>@user.phone</td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="/User/Details/@user.id" class="btn btn-info btn-sm" title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="/User/Edit/@user.id" class="btn btn-warning btn-sm" title="Sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="/User/Delete/@user.id" class="btn btn-danger btn-sm" 
                                                       onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng @user.username?')" title="Xóa">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
                <div class="mt-3">
                    <small class="text-muted">Tổng cộng: <strong>@Model.Count</strong> người dùng</small>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                    <h4>Chưa có người dùng nào</h4>
                    <p>Hệ thống chưa có người dùng nào. Hãy thêm người dùng đầu tiên!</p>
                    <a href="/User/Add" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Thêm người dùng đầu tiên
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .btn-group .btn {
        margin-right: 2px;
    }
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }
    .badge-secondary {
        background-color: #6c757d;
    }
    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
</style>
